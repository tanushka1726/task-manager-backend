{
  "compilerOptions": {
    /* Environment */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* Project structure */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Strictness */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Interop */
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Node types */
    "types": ["node"]
  },
  "include": ["src", "types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
